{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@app/assets/*": ["./features/app/assets/*"],
      "@app/components/*": ["./features/app/components/*"],
      "@app/containers/*": ["./features/app/containers/*"],
      "@app/data/*": ["./features/app/data/*"],
      "@app/layouts/*": ["./features/app/layouts/*"],

      "@common/*": ["./common/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
